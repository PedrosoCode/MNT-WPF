<Window x:Class="MNT.CadastroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro" Height="400" Width="519">
    <Grid>
        <Label Content="Usuário" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,40,0,0"/>
        <TextBox x:Name="txtUsuarioCadastro" HorizontalAlignment="Left" Height="23" Margin="183,43,0,0" VerticalAlignment="Top" Width="200"/>

        <Label Content="Senha" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,80,0,0"/>
        <PasswordBox x:Name="txtSenhaCadastro" HorizontalAlignment="Left" Height="23" Margin="183,83,0,0" VerticalAlignment="Top" Width="200"/>

        <Label Content="Confirmar Senha" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,120,0,0"/>
        <PasswordBox x:Name="txtConfirmarSenhaCadastro" HorizontalAlignment="Left" Height="23" Margin="183,123,0,0" VerticalAlignment="Top" Width="200"/>

        <Button Content="Cadastrar" HorizontalAlignment="Left" Margin="183,172,0,0" VerticalAlignment="Top" Width="200" Click="Cadastrar_Click"/>
    </Grid>
</Window>
