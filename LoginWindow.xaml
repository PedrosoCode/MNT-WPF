<Window x:Class="MNT.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="400">
    <Grid>
        <Label Content="Usuário" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,40,0,0"/>
        <TextBox x:Name="txtUsuario" HorizontalAlignment="Left" Height="23" Margin="120,40,0,0" VerticalAlignment="Top" Width="200"/>

        <Label Content="Senha" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,80,0,0"/>
        <PasswordBox x:Name="txtSenha" HorizontalAlignment="Left" Height="23" Margin="120,80,0,0" VerticalAlignment="Top" Width="200"/>

        <Button Content="Entrar" HorizontalAlignment="Left" Margin="120,120,0,0" VerticalAlignment="Top" Width="100" Click="Login_Click"/>
        <Button Content="Cadastro" HorizontalAlignment="Left" Margin="230,120,0,0" VerticalAlignment="Top" Width="100" Click="Cadastro_Click"/>
    </Grid>
</Window>
